@model IEnumerable<FileSync.Models.Group>

@{
    ViewBag.PageIcon = "star";
    ViewBag.PageIconDescription = "Groups";
    ViewBag.Title = "Groups";
}
<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.DisplayName)
        </th>
        <th>
            Action
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <span class="glyphicon glyphicon-star fs-icon"></span>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisplayName)
        </td>
        <td>
            @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-pencil fs-no-decoration fs-icon-button" }) |
            @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "glyphicon glyphicon-info-sign fs-no-decoration fs-icon-button" }) |
            @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove fs-no-decoration fs-icon-button" }) |
            @Html.ActionLink(" ", "ManageGroupUsers", new { id = item.Id }, new { @class = "glyphicon glyphicon-user fs-no-decoration fs-icon-button" })
        </td>
    </tr>
}

</table>
<div style="position:relative; height: 45px; font-size:45px; line-height: 1;">
    @Html.ActionLink(" ", "Create", new { }, new { @class = "glyphicon-plus fs-no-decoration fs-icon-button fs-fab", @style = "position: absolute; right: 0;" })
</div>